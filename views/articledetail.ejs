<%- include('guestheader') %>

<div class="mainpageContent">
    <ol class="breadcrumb">
        <li><a href="<%= rootUrl %>/articles">home</a></li>
        <li class="active"><%= article.title %></li>
    </ol>
    
    <div class="panel panel-default">
        <div class="panel-heading"><%= article.title %></div>
        <div class="panel-body">
            <%- article.content %>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">留言</div>
        <div class="panel-body">
             <ul class="list-group">
                <% words.forEach(function(word){ %>
                    <%- include('./components/word', { word : word }) %>
                <% }) %>
                
                <li class="list-group-item">
                    <form method="post" action="<%= rootUrl %>/comment/<%= article._id %>">
                        <div class="form-group">
                            <label for="author">author</label>
                            <input type="text" class="form-control" name="author" id="author" placeholder="输入个名字吧">
                        </div>
                        <div class="form-group">
                            <label for="word">words</label>
                            <textarea class="form-control" rows="5" name="word" id="word"></textarea>
                        </div>
                        <button type="submit" class="btn btn-default">留言</button>
                    </form>
                </li>
             </ul>           
        </div>
    </div>
</div>

<%- include('guestfooter') %>