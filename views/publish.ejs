<%- include('header') %>

<h1 class="signinheader">admin</h1>

<ul class="nav nav-tabs">
  <li role="presentation"><a href="<%= rootUrl %>/admin/articles">已发布的文章</a></li>
  <li role="presentation" class="active"><a href="<%= rootUrl %>/admin/publish">发布新文章</a></li>
</ul>

<div class="mainpageContent">
<form method="post">
    <div class="form-group">
        <label for="category">category</label>
        <input type="text" class="form-control" name="category" id="category" placeholder="输入标签，空格隔开">
    </div>
    <div class="form-group">
        <label for="title">title</label>
        <input type="text" class="form-control" name="title" id="title" placeholder="title">
    </div>
    <div class="form-group">
        <label for="content">content</label>
        <textarea class="form-control" rows="20" name="content" id="content"></textarea>
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
</form>
</div>

<%- include('footer') %>